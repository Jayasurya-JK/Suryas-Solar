# Netlify CMS & Form Integration
# Copy this file to .env.local for local development
# Set these variables in Netlify dashboard for production

# Form Webhook (Get this from Zapier/Make after creating a webhook)
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/YOUR_WEBHOOK_ID/

# Email Notifications (Optional - using SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=info@suryassolar.com
SENDGRID_TO_EMAIL=admin@suryassolar.com

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://suryassolar.com

# Google Analytics (Optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Facebook Pixel (Optional)
NEXT_PUBLIC_FB_PIXEL_ID=your_fb_pixel_id
